<% if logged_in? %>
	<% if current_user.facebook_user? %>
		<fb:profile-pic uid="<%= current_user.fb_user_id%>" facebook-logo="false" size="thumb" ></fb:profile-pic>
		<span>Welcome, <%= current_user.name %> </span> | 
		<a href="#" onclick='FB.Connect.logoutAndRedirect("/logout")'>Logout</a>
	<% else %>
		<span>Welcome, friend. Connect with your facebook account!</span> |
		<%= fb_login_button('window.location = "/users/link_user_accounts";')%> | 
		<%= link_to 'Logout', logout_path%>
	<% end %>
<% else %>
	<span>Welcome, friend</span> | 
	<%= link_to 'Signup', signup_path%> or <%= link_to 'Login', login_path%>
<% end %>
